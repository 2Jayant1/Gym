# ─── Server ────────────────────────────────────────
PORT=5001
NODE_ENV=development        # development | production | test

# ─── MongoDB ───────────────────────────────────────
MONGODB_URI=mongodb://localhost:27017/gym_management

# ─── Auth / JWT ────────────────────────────────────
AUTH_SECRET=change-me-to-a-strong-random-secret
JWT_EXPIRES_IN=10m          # short-lived access token
JWT_REFRESH_EXPIRES_IN=7d   # refresh token JWT lifetime
REFRESH_TOKEN_TTL_DAYS=7    # DB TTL for stored refresh tokens

# ─── CORS ──────────────────────────────────────────
CORS_ORIGIN=http://localhost:3000

# ─── Rate Limiting ─────────────────────────────────
RATE_LIMIT_WINDOW_MS=900000 # 15 min
RATE_LIMIT_MAX=200          # max requests per window

# ─── Logging ──────────────────────────────────────
LOG_LEVEL=debug             # error | warn | info | http | debug
